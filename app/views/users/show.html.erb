<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<% if user_signed_in? && @user == current_user %>
  <% unless @user.email == "test@xample.com" then %>
     <div class="mt-3">
       <%= link_to "退会",user_path(current_user.id),class: "destroy_user",
       method: :delete, "data-confirm" => "本当に削除しますか？" %>
     </div>
    <% end %>
  <% end %>

<%= render 'post_images/list', post_images: @post_images %>